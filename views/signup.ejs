<!DOCTYPE html>
<html>
  <head>
    <title>WTW</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bar.css' />
    <link rel="stylesheet" href="/stylesheets/signup_login.css">
  </head>
  <body>
    <header>
      <div class="bar">
        <div class="left_leaning">
          <a href="/"> <img src="images/logo.png" alt="ikona" style="height: 3rem"> </a>
        </div>
        <div class="right_leaning2">
          <% if(!korisnik) {%>
            <button onclick="location.href = 'login'" id="login_btn"><img src="images/login.png" alt=""></button>
            <button onclick=" location.href = 'signup'" id="signup_btn" ><img src="images/signup.png" alt=""></button>
          <%} else {if(korisnik == 'umjetnik'){%>
            <button onclick=" location.href = 'umjetnik'" id="profil_btn"><img src="images/user.png" alt=""></button>
          <%} else {%>
            <button onclick=" location.href = 'lokal'" id="profil_btn"><img src="images/user.png" alt=""></button>
          <%}%>
          <button onclick=" location.href = 'logout'" id="logout_btn"><img src="images/logout.png" alt=""></button>
          <%}%>
        </div>
      </div>
    </header>

  <main>

    <div class="container">
        <form class="signup_login" id="umjetnik_registar" action="/signup/umjetnik" method="POST" enctype="multipart/form-data">
          <button type="button" id="umjetnik" onclick="promjeniVidljivost(this)">Vi ste lokal?</button>
            <h2>Registruj se kao umjetnik!</h2>
          <ul>
            <% if(typeof err != 'undefined') {%>
              <% err.forEach(error => { %>
                <li><%= error.poruka %></li>
              <% }) %>
            <% }%>
          </ul>

          <div class="field">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required>
          </div>

          <div class="field">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" required>
          </div>

          <div class="field">
            <label for="zanr">Zanr</label>
            <input type="text" name="zanr" id="zanr" required>
          </div>

          <div class="field">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
          </div>

          <div class="field">
            <label for="re_password">Confirm Password</label>
            <input type="password" name="re_password" id="re_password" required>
          </div>

          <div class="field">
            <input type="file" name="image" required>
          </div>

        <div class="field">
          <label for="cijena_od">Cijena od</label>
          <input type="text" name="cijena_od" id="cijena_od" required>
        </div>

        <div class="field">
          <label for="cijena_do">Cijena do</label>
          <input type="text" name="cijena_do" id="cijena_do" required>
        </div>
      <br>

      <label for="description">Description</label>
        <br>
      <div class="field">
        <textarea name="opis" id="opis"></textarea>
        <button><img src="/images/next.png" alt="next"></button>
      </div>

    <a href="login">Already have an account?</a>


    </form>
    <form class="signup_login" id="lokal_registar" action="/signup/lokal" method="POST"  enctype="multipart/form-data">
      <button type="button" id="lokal" onclick="promjeniVidljivost(this)">Vi ste umjetnik?</button>
        <h2>Registruj se kao lokal!</h2>
          <ul>
            <% if(typeof err != 'undefined') {%>
              <% err.forEach(error => { %>
                <li><%= error.poruka %></li>
              <% }) %>
            <% }%>
          </ul>

          <div class="field">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required>
          </div>

          <div class="field">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" required>
          </div>

          <div class="field">
            <label for="lokacija">Lokacija</label>
            <input type="text" name="lokacija" id="lokacija" required>
          </div>

          <div class="field">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
          </div>

          <div class="field">
            <label for="re_password">Confirm Password</label>
            <input type="password" name="re_password" id="re_password" required>
          </div>

          <div class="field">
            <input type="file" name="image" required>
          </div>

          <div class="field">
            <label for="cijena_od">Cijena od</label>
            <input type="text" name="cijena_od" id="cijena_od" required>
          </div>

          <div class="field">
            <label for="cijena_do">Cijena do</label>
            <input type="text" name="cijena_do" id="cijena_do" required>
          </div>
          <br>

          <label for="description">Description</label>
          <br>
          <div class="field">
            <textarea name="opis" id="opis"></textarea>
            <button><img src="/images/next.png" alt="next"></button>
          </div>

          <a href="login">Already have an account?</a>

      </form>

    </div>


  </main>

    <script>
      function promjeniVidljivost(e) {
        if(e.id == "umjetnik") {
          document.getElementById("umjetnik_registar").style.display = "none";
          document.getElementById("lokal_registar").style.display = "block";
        } else if (e.id == "lokal"){
          document.getElementById("umjetnik_registar").style.display = "block";
          document.getElementById("lokal_registar").style.display = "none";
        }
        console.log(e)
      }
    </script>
  </body>
</html>
